   <script type="text/javascript">
        $(function(){
        	$('#sidebar_ul').find('li').eq(1).addClass('active');
        })
        
        function history(id){
        	
            $('#drawing_tbody').find("tr").remove();
        	$('#dialog2').show().on('click', '.weui_btn_dialog', function () {
                $('#dialog2').off('click').hide();
            });
        	
        	$.post("${ctx}/listUpdateDrawing.do", 
        		   { "id": id },
        		   function(result){
        	        		   
                    		   var list = result.data;                   		
                    		   var tbody = $('#drawing_tbody');
                    		   for(i=0;i<list.length;i++){
                    			   var drawing = list[i];
                    			   var j = i+1;
                    			   var tr = '<tr class="gradeA odd">'+
				                    		        '<td>'+j+'</td>'+
				                    		        '<td>'+drawing.drawingName+'</td>'+
				                    		        '<td>'+drawing.updateTime+'</td>'+
				                    		       '<td class="center"><a href="#" onclick="download_drawing('+drawing.id+')">Download</a>'+
				                    		       '</td>'+
				                    		      '</tr>';
                    			   tr = $(tr);
                    			  tbody.append(tr);
                    			  $('#drawing_tbody').find("tr:eq(0)").css("background-color","rgb(137, 228, 159)"); 
                    	     }		
			   
        		    });
        	
        }
        //点击下载图纸
        function download_drawing(id){      
        		   
//         	    	//使用ajax提交下载
        			$.ajax({
        				url:"/crm/fileDownload_updateDrawing.do",
        				data:{
        					  "id":id
        					  },
        				type:"post",
        				dataType:"text",
        				success:function(res){        					
        					window.location.href = "${ctx}/fileDownload_updateDrawing.do?id="+id;      					
        					},
        			    error:function(){
        			    	
        			    	easyDialog.open({
        			    		  container : {
        			    		    header : 'Prompt message',
        			    		    content : 'Download failed !'
        			    		  },
        			    		  overlay : false,
        			    		  autoClose : 1000
        			    		});
        			    }
        			});
        	   }
        	   

        
        
        
        function dispose(){
        	$('#dialog2').off('click').hide();
        }
    </script>
  <script type="text/javascript">
    
	  
	    /*
	     * 查询单个图纸信息，展示在reOrder界面
	     */    
	    function listReOrder(id){		  
		   window.location.href = "${ctx}/queryById.do?id="+id;
	     }
	    
	    /*
	     * 根据选择的ids，展示图纸在reOrder界面
	     */
	    var ids ={};
	    function listSelectReOrders(){
	    	    var id = [];    	    
	    	    $('.drawing-checkbox').each(function(){
	    	    	if($(this).is(':checked')) {
	    	    	  id.push($(this).val());
	    	    	}
	    	    })
	    	    if(id.length == 0){
	    	    	easyDialog.open({
  					  container : {
  						header :  ' Prompt message',
  					    content : 'Please select a drawing'
  					  },
  					  drag : false,
  					  overlay : false,
  					  autoClose : 1000
  					});
	    	    	return false;
	    	    }else{
		            ids = JSON.stringify(id); 	
	    	    }	           
	    	    
	    	    $.ajax({
	    			url:"${ctx}/queryDrawingsByIds.do",
	    			data:{"ids":ids},
	    			type:"post",
	    			dataType:"text",
	    			success:function(res){   				
	                    window.location.href = "${ctx}/queryDrawingsByIds.do?ids="+ids;
	    				
	    				},
	    			error:function(){

	    				easyDialog.open({
	    					  container : {
	    						header :  ' Prompt message',
	    					    content : ' Sorry,some problems happened.'
	    					  },
	    					  drag : false,
	    					  overlay : false,
	    					  autoClose : 1000
	    					});
	    			}
	    		});      	       	    
	    }    
	    
	    
	  //得到行对象  
		function getRowObj(obj)  
		{  
		var i = 0;  
		while(obj.tagName.toLowerCase() != "tr"){  
		obj = obj.parentNode;  
		if(obj.tagName.toLowerCase() == "table")return null;  
		}  
		return obj;  
		}  
		//根据得到的行对象得到所在的行数  
		function getRowNo(obj){  
		var trObj = getRowObj(obj);  
		var trArr = trObj.parentNode.children;  
		for(var trNo= 0; trNo < trArr.length; trNo++){  
		if(trObj == trObj.parentNode.children[trNo]){  
		alert(trNo+1);  
		}  
		}  
		}  
	            
	    
	      //获取上传的文件名
	       function doUpload(obj,id){
	    	  $('#drawingId').val(id);
	    	  var path = $(obj).val();
	    	  sppath = path.split("\\");
	    	  var drawingName = sppath[sppath.length-1];
	    	  $('#getDrawingName').val(drawingName);  
	    	  if(drawingName == null || drawingName == '' || drawingName == undefined){
	              	easyDialog.open({
	             		   container : {
	                 		     header : '  Prompt message',
	                 		     content : '  Please select a file'
	             		   },
	    					  drag : false,
		 					  overlay : false,
		 					  autoClose : 1000
	             		 });   
	 		    	return false;
	 		    }else{
		 		    autTime();
	 		    }	 		    	                          

              $("#file_upload_id").ajaxSubmit({
	    			type: "post",
	    			url: "${ctx}/updateDrawingsById.do",
	    	     	dataType: "text",
	    	     	success: function(result){
	    	     		 easyDialog.open({
	                     	  container : {
	                     		header :  '  Prompt message',
	                     	    content : 'Upload complete , 1 seconds after the closure...'
	                     	  },
	      				      drag : false,
	    					  overlay : false,
	    					  autoClose : 2000
	                     	});   
	    	     		 //设置定时器，1s后刷新界面
	    		     	setTimeout(function(){location.reload()},1000);
	    		     	$('#show_upload_dialog').hide(); 
	    	     	},
	    			error: function(){
	    				 easyDialog.open({
	             		   container : {
	                 		     header : '  Prompt message',
	                 		     content : '  Upload failed. Please try again !'
	             		   },
	    					  drag : false,
	 					  overlay : false,
	 					  autoClose : 1000
	             		 });  
	    				 $('#show_upload_dialog').hide();
	    			}
	    	 	}); 	 
	  
	       }  
	    
	        
	     //点击下载图纸
           function drawing_download(id){      
           		   
//            	    	//使用ajax提交下载
           			$.ajax({
           				url:"/crm/fileDownload_clientDrawing.do",
           				data:{
           					  "id":id
           					  },
           				type:"post",
           				dataType:"text",
           				success:function(res){
           					
           					window.location.href = "${ctx}/fileDownload_clientDrawing.do?id="+id;
           					
           					},
           			    error:function(){
           			    	
           			    	easyDialog.open({
           			    		  container : {
           			    		    header : 'Prompt message',
           			    		    content : 'Download failed !'
           			    		  },
           			    		  overlay : false,
           			    		  autoClose : 1000
           			    		});
           			    }
           			});
           	   }  

    
</script>
