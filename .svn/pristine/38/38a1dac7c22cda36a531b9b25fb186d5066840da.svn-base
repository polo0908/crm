*{
	margin:0;
	padding:0;
	box-sizing:border-box;
}
input{
	outline: 0 none;
}
.login{
	font-family: "Arial";
}
.login .bg{
	width: 100%;
	height:100%;
	position:relative;
}
.login .bg img{
	max-width:100%;	
	width:auto;
	height:100%;
	margin:0 atuo;
}
.login .login-in{
	width: 857px;
	height: 594px;
	background-color:#fff;
	position:absolute;
	top:50%;
	left:50%;
	margin-top:-297px;
	margin-left:-429px;
	z-index:500;
	overflow:hidden;
}
.login .L{
	width: 307px;
	height: 594px;
	background:url(/crm/images/picl.jpg) no-repeat;
	float:left;
}
.login h4{
	font-size:24px;
	color:#fff;
	font-family: "Arial";
	font-weight:normal;
	width:248px;
	margin:0 auto;
	margin-top:182px;
	margin-bottom:40px;

}
.login .sm{
	margin-top:50px;
}
.login p{
	font-size:14px;
	color:#fff;
	font-family: "Arial";
	padding-left:42px;
	margin-bottom:13px;
}
.login .R{
	float:left;
}
.login .R-t{
	width: 550px;
	height: 508px;
	padding-top:125px;
	padding-left:78px;
	padding-right:75px;

}
.login .logo{
	font-size:18px;
	color:#333;
}
.login .logo img,.login .logo span{
	float:left;
}
.login .logo span{
	margin:30px 0 0 10px;
}
.login form{
	margin-top:85px;
}
.login fieldset{
	border:1px solid #d6d6d6;
	width: 400px;
	height: 40px;
	margin-bottom:10px;
}
.login legend{
	font-size:12px;
	color:#c2c2c2;
	margin-left:10px;
	padding-left:5px;
	padding-right:5px;
	padding-bottom:4px;
}
.login fieldset input{
	width: 400px;
	border:0 none;
	padding-left:15px;
}
.login a{
	font-size:12px;
	color:#f0ad4e;
	text-decoration: none;
}
.login .tj{
	padding-top:35px;
}
.login .a1{
	float:left;
}
.login .btn{
	display:inline-block;
	width: 180px;
	height: 42px;
	background-color: #0088cc;
	color:#fff;
	text-align:center;
	line-height:42px;
	float:right;
	font-size:16px;
	margin-top:-15px;

}
.login .R-b{
	height: 86px;
	background-color: #f5f6f8;
	line-height:86px;
	text-align:center;
	font-size:12px;
}
.login .R-b a{
	color:#28b779;
}